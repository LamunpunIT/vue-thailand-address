{
	"compilerOptions": {
		"module": "es2015",
		"moduleResolution": "node",
		"target": "es5",
		"lib": [
			"dom",
			"es2015"
		],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"declaration": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"#/*": ["src/types/*"],
			"@data/*": ["src/data/*"],
			"@comp/*": ["src/components/*"],
			"@lib/*": ["src/lib/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": [
		"src"
	]
}
