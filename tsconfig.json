{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"es5",
			"es2015"
		],
		"baseUrl": ".",
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"experimentalDecorators": true,
		"outDir": "./dist/",
		"sourceMap": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"./src/**/*"
	]
}
