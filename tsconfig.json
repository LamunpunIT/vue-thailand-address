{
	"compilerOptions": {
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [
			"dom",
			"es2015"
		],
		"target": "es5",
		"module": "es2015",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"include": [
		"./src/**/*",
		"./dev/**/*",
		"./test/**/*"
	]
}
